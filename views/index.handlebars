<div class="jumbotron jumbotron-fluid bg-dark text-light p-5">
  <h1>Burger's App!</h1>
</div>

<div class="container">
  <div class="row">
    {{!-- column for form --}}
    <div class="col-12 col-md-3">
      <form id="burger-form">
        <input class="form-control" id="name-input" placeholder="Type Burger"/>
        <button class="btn btn-success btn-block" type="submit">
          Add a Burger!
        </button>
      </form>
    </div>
    {{!-- end left column --}}
    {{!-- right column to display burgers--}}
    <div class="col-12 col-md-9">
      {{!-- make two columns in right column --}}
      <div class="row">
        {{!-- inner left column --}}
        <div class="col-12 col-md-6">
          <h2>Burger's not eaten yet, Choose wisely!</h2>
          <ul class="list-group">
            {{!-- use handlebars to print burgers that aren't devoured --}}
            {{#each burgerData}}
              {{!-- this is the same as saying !== --}}
              {{#unless devoured}}
                <li class="list-group-item d-flex">
                  {{burger_name}} 
                  <span class="ml-auto">
                    <button 
                      data-id="{{id}}"
                      data-devoured="false"
                      class="btn btn-sm btn-info update-burger"
                      >
                    Eat IT!!
                    </button>

                    {{!-- delete burger --}}
                    <button
                      data-id="{{id}}"
                      class="btn btn-sm btn-danger delete-burger"
                    >
                      Destroy the Burger!
                    </button>
                  </span>
                </li>
              {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner left --}}
        {{!-- inner right --}}
        <div class="col-12 col-md-6">
          <h2>Burgers that were so good they got eaten!</h2>
          <ul class="list-group">
 
            {{#each burgerData}}
            {{!-- this is the same as saying !== --}}
            {{#if devoured}}
            <li class="list-group-item d-flex">
              {{burger_name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoured=""="true" class="btn btn-sm btn-danger delete-burger">
                  Destroy the burger!!
                </button>
        
              </span>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner right --}}
      </div>
    </div>
  </div>
</div>

<script src="./assets/js/burgers.js"></script>